extends ./layout/index

block contenido 
    main.container.mt-5 
      h1.text-center.mt-5 #{pagina} 

      blockquote.text-center Lee sobre nuestros clientes y sus experiencias 
        include ./layout/bloque_testimoniales
                
      .row

        h2.d-block.w-100.text-center Agregar un testimonial
        .col-md-12
            if(errores)
                each error in errores
                    .alert.col.alert-danger.text-center= error.mensaje


        .row.justify-content-center.col 
            .col-md-8  
                form(action="" method="POST")
                    .form-group     
                        label(for="nombre") Nombre 
                        input#nombre(type="text", placerholder="Tu Nombre", name="nombre", class="form-control", value=nombre) 
                    .form-group     
                        label(for="correo") Correo Electronico 
                        input#correo(type="text", placerholder="Tu Correo", name="correo", class="form-control", value=correo)
                    .form-group     
                        label(for="mensaje") Correo Electronico 
                        textarea#mensaje(class="form-control",name="mensaje")= mensaje
                    
                    input.btn.btn-success.btn-block(type="submit")

            